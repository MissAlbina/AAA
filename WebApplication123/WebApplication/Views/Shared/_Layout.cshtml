<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Satisfy|Bree+Serif|Candal|PT+Sans|Pattaya">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <link rel="shortcut icon" href="~/images/bar-icon.png" type="image/png">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/angular.js"></script>
    @*<script src="/Scripts/event.js"></script>*@
    @*<script src="/Scripts/bootstrap.js"></script>*@
    <script src="/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/ng-table.js"></script>
    <script src="~/Scripts/ngTouch.js"></script>
    @*<script src="~/Scripts/angular-translate.js"></script>*@
    <script src="/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-animate.js"></script>
    <script src='https://rawgit.com/ghostbar/angular-file-model/master/angular-file-model.js'></script>
    <script src="~/Scripts/App/app.js"></script>
    <script src="~/Scripts/App/dataBaseService.js"></script>
    <script src="~/Scripts/App/clientController.js"></script>
    <script src="~/Scripts/App/slidesController.js"></script>
    <script src="~/Scripts/App/restaurantMenuController.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body ng-app="RestaurantSiteApp">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Ресторан", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Меню", "RestaurantMenu", "Home")</li>
                        <li>@Html.ActionLink("Галерея", "Gallery", "Home")</li>
                        <li>@Html.ActionLink("Забронировать стол", "AddClient", "Home")</li>
                        <li>@Html.ActionLink("О нас", "About", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="body-content">
                @RenderBody()
            <footer class="navbar-fixed-bottom footer text-center">
                <div class="footer-top">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6 text-center">
                            <div class="widget">
                                <h4 class="widget-title">Ресторан</h4>
                                <address>Курчатова 30<br>г. Димитровград</address>
                                <div class="social-list">
                                    <a href="#"><i class="fa fa-vk" aria-hidden="true"></i></a>
                                    <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                </div>
                                <p class="copyright clear-float">
                                    © Ресторан Димитровграда
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
</body>
</html>
